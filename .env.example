# .env.example - Variables de entorno para el proyecto completo
# Sistema de Recomendación y Generación de Horarios - UNI
# Copia este archivo a .env y ajusta los valores

# ========================================
# Configuración General
# ========================================
NODE_ENV=production
ENVIRONMENT=production
LOG_LEVEL=info

# ========================================
# Puertos de los Servicios
# ========================================
FRONTEND_PORT=3000
BACKEND_PORT=4000
PREDICTOR_PORT=8000
RECOMENDADOR_PORT=8001

# ========================================
# Base de Datos PostgreSQL (Servidor Externo)
# ========================================
DB_HOST=tu_servidor_postgresql.com
DB_PORT=5432
DB_NAME=uni_horarios_db
DB_USER=postgres
DB_PASSWORD=tu_password_super_seguro_aqui

# URL de conexión completa (alternativa)
DATABASE_URL=postgresql://postgres:tu_password@tu_servidor_postgresql.com:5432/uni_horarios_db

# ========================================
# Seguridad Backend (JWT)
# ========================================
JWT_SECRET=cambiar_esto_por_un_secreto_seguro_en_produccion_min_32_caracteres
JWT_EXPIRATION=24h

# ========================================
# URLs de Microservicios (para comunicación interna)
# ========================================
PREDICTOR_API_URL=http://predictor_demanda_api:8000
RECOMENDADOR_API_URL=http://recomendador_cursos_api:8001
BACKEND_API_URL=http://backend:4000

# ========================================
# CORS (si es necesario)
# ========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# ========================================
# Configuración de Modelos ML
# ========================================
# Predictor de Demanda
MODELS_DIR=models/
RESULTS_DIR=results/
DATA_DIR=data/
CONFIGS_DIR=configs/
MIN_HISTORY_SEMESTERS=6
TEST_SIZE=0.2
RANDOM_STATE=42

# Recomendador de Cursos
RECOMMENDATION_ALGORITHM=collaborative_filtering
MIN_SIMILARITY_SCORE=0.7

# ========================================
# Email (opcional, para notificaciones)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@uni.edu.pe
SMTP_PASSWORD=tu_password_email
EMAIL_FROM=sistema-horarios@uni.edu.pe

# ========================================
# Redis (opcional, para caché)
# ========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# Monitoreo (opcional)
# ========================================
ENABLE_METRICS=true
ENABLE_SWAGGER=true
ENABLE_DEBUG=false
